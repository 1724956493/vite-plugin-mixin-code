{
    "compilerOptions": {
      "module": "ESNext",
      "target": "es2017",
      "moduleResolution": "node",
      "noImplicitThis": false,
      "strict": true,
      "declaration": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "lib": ["ESNext"],
      "sourceMap": false,
      "noEmitOnError": true
    },
    "include": ["./packages"],
    "exclude": ["**/dist", "**/node_modules", "**/test"]
  }
  